{
  "name": "cryptlight",
  "version": "0.1.2",
  "description": "A cryptic crossword clue solving aid",
  "keywords": [
    "puzzles"
  ],
  "homepage": "https://github.com/cjquines/cryptlight#readme",
  "bugs": {
    "url": "https://github.com/cjquines/cryptlight/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjquines/cryptlight.git"
  },
  "license": "MIT",
  "author": "CJ Quines <cj@cjquines.com>",
  "type": "module",
  "imports": {
    "#download": {
      "node": "./src/download.node.ts",
      "default": "./src/download.ts"
    }
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "!src/**/*.test.ts",
    "!src/data/*.txt"
  ],
  "scripts": {
    "build:abbreviations": "tsx scripts/build-abbreviations.ts",
    "build:indicators": "tsx scripts/build-indicators.ts",
    "build:tsc": "tsc --build tsconfig.build.json",
    "format": "prettier --write .",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --build tsconfig.json"
  },
  "dependencies": {
    "compromise": "^14.14.5",
    "cromulence": "^0.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.0.15",
    "@vitest/eslint-plugin": "^1.6.4",
    "csv-parse": "^6.1.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  }
}
